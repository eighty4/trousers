{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2021",
    "lib": [
      "ES2021"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": false,
    "isolatedModules": true,
    "noEmit": false,
    "noEmitOnError": false,
  }
}
