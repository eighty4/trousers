{
  "compilerOptions": {
    "target": "ES2021",
    "module": "Node16",
    "lib": [
      "ES2021"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": false,
    "isolatedModules": true,
    "noEmit": false,
    "noEmitOnError": false,
    "outDir": "src",
    "rootDir": "src"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/*.ts"
  ],
  "references": [
    {
      "path": "../trousers-data-interfaces"
    },
    {
      "path": "../trousers-domain"
    }
  ]
}
